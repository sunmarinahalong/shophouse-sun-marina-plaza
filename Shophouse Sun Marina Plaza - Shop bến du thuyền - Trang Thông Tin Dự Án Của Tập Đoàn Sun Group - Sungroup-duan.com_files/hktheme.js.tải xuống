jQuery(document).ready(function ($) {

    //Get district
    $('#city').change(function () {
        $.ajax({
            url: ajaxurl,
            type: "POST",
            data: {
                'action': 'get_districts_in_city',
                'city': $(this).val()
            },
            success: function (response) {
                if (response) {
                    $('#district').html(response);
                }
            }
        });
    });

});
